$P = 'calendar-page'
$M = 'calendar-month'

recipe :all								do |r|
	cmd "kwartz -l php     -p #{$P}.plogic #{$P}.html > #{$P}.php"
	cmd "kwartz -l php     -p #{$M}.plogic #{$M}.html > #{$M}.php"
	cmd "kwartz -l erb     -p #{$P}.plogic #{$P}.html > #{$P}.erb"
	cmd "kwartz -l erb     -p #{$M}.plogic #{$M}.html > #{$M}.erb"
	end

recipe :clean								do |r|
	rm_rf "#{$P}.php", "#{$M}.php", "#{$P}.erb", "#{$M}.erb"
	end
