t = 'border3'

recipe  :all		, 'result.html'

recipe  'result.html'		, "#{t}.rb", "#{t}.view"		do |r|
	cmd "ruby #{t}.rb > result.html"
	end

grecipe '*.view'		, '{1}.html', '{1}.plogic'		do |r|
	cmd "kwartz -l eruby -p {1}.plogic {1}.html > {1}.view"
	end

recipe  :clear								do |r|
	rm_rf "result.html", "#{t}.view"
	end

recipe  :default	, :all
