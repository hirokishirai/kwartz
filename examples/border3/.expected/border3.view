<html>
  <body>

    <table>
      <thead>
	<th>Name</th><th>E-Mail</th>
      </thead>
      <tbody>
<% i = 0 %>
<% for user in user_list do %>
<%   i += 1 %>
<%   name = user["name"] %>
<%   email = user["email"] %>
<%   if i % 2 == 0 then %>
	<tr bgcolor="#CCCCFF">
	  <td><%= name %></td>
	  <td><a href="mailto:<%= email %>"><%= email %></a></td>
	</tr>
<%   else %>
	<tr bgcolor="#FFCCCC">
	  <td><%= name %></td>
	  <td><a href="mailto:<%= email %>"><%= email %></a></td>
	</tr>
<%   end %>
<% end %>
      </tbody>
    </table>
    
  </body>
</html>
