#!/usr/bin/env rook

langs = [ "php", "jstl11", "jstl10", "velocity", ]

recipe :all								do |r|
	langs.each { |lang|
	    cmd "kwartz -l #{lang} -p menu.plogic,page.plogic -i menu.html,page1.html layout.html > page1.#{lang}"
	    cmd "kwartz -l #{lang} -p menu.plogic,page.plogic -i menu.html,page1.html layout.html > page2.#{lang}"
	}
	end

recipe :clean								do |r|
	files = []
	files.concat langs.collect { |lang| "page1.#{lang}" }
	files.concat langs.collect { |lang| "page2.#{lang}" }
	rm_rf files
	end
