#navi {
    plogic: {
        if (page > 0) {      // remove element when page is 0
            @stag;
            @cont;
            @etag;
        }
    }
}


#navi_first {
    attrs:  "href" first_url;
    plogic: {
        if (first_url != empty) {
            @stag;
            @cont;
            @etag;
        } else {
            @cont;           // remove start tag and end tag
        }
    }
}


