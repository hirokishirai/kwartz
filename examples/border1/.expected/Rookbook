#!/usr/bin/env rook

t = 'border1'

recipe :all								do |r|
	cmd "kwartz -l php      -p #{t}.plogic #{t}.html > #{t}.php"
	cmd "kwartz -l jstl10   -p #{t}.plogic #{t}.html > #{t}.jstl10"
	cmd "kwartz -l jstl11   -p #{t}.plogic #{t}.html > #{t}.jstl11"
	cmd "kwartz -l velocity -p #{t}.plogic #{t}.html > #{t}.velocity"
	end

recipe :clean								do |r|
	rm_rf "#{t}.php", "#{t}.jstl11", "#{t}.jstl10", "#{t}.velocity"
	end

