<html>
  <body>

    <table>
      <thead>
        <th>Name</th><th>E-Mail</th>
      </thead>
      <tbody>
#set($i = 0)
#foreach($user in $user_list)
  #set($i = $i + 1)
  #if($i % 2 == 0)
    #set($color = "#CCCCFF")
  #else
    #set($color = "#FFCCCC")
  #end
        <tr bgcolor="$!{color}">
          <td>$!{user["name"]}</td>
          <td><a href="mailto:$!{user["email"]}">$!{user["email"]}</a></td>
        </tr>
#end
      </tbody>
    </table>
    
  </body>
</html>
