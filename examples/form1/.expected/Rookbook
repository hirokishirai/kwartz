#!/usr/bin/env rook

langs = [ "php", "jstl11", "jstl10", "velocity", ]

recipe :all								do |r|
	langs.each { |lang|
	    cmd "kwartz -l #{lang} -e -p register.plogic register.html > register.#{lang}"
	    cmd "kwartz -l #{lang} -e finish.html > finish.#{lang}"
	}
	end

recipe :clean								do |r|
	files = langs.collect{|l| ["register.#{l}", "finish.#{l}"] }.flatten
	rm_rf files
	end

