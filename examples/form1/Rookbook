view_files = [ "register.view", "finish.view" ]

recipe  :all		, view_files

grecipe "*.view"	, "{1}.html", {:if_exists=>"{1}.plogic"}	do |r|
	if r.ingreds[1]
	   cmd "kwartz -l eruby -e -p #{r.ingreds[1]} #{r.ingreds[0]} > #{r.product}"
	else
	   cmd "kwartz -l eruby -e #{r.ingreds[0]} > #{r.product}"
	end
	end

recipe  :clear								do |r|
	rm_rf view_files
	end

recipe  :default	, :all
