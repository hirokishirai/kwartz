
all = %w[kwartzite-on-rails.html]
tagfile = 'html-css_i'

recipe :all	, all

grecipe '*.html'	, '{1}.txt'	do |r|
	dir = 'd'
	mkdir dir unless test(?d, dir)
	cmd "retrieve -d #{dir} {1}.txt"
	cmd "kwaser -t #{tagfile} -T2 {1}.txt > {1}.toc.html"
	cmd "kwaser -t #{tagfile}    {1}.txt > {1}.html"
    end
